{{block filmTitle(title, class, element = "h1", useTitleImage = true)}}

  {{titleImage := .ImageMap["Title"]}}

  {{if isset(titleImage) && useTitleImage}}
    <img src="{{titleImage}}" alt="{{title}}" class="item-title-image {{class}}" />
  {{else}}
    <{{element}}>{{title}}</{{element}}>
  {{end}}
{{end}}
